# Application Settings
ENVIRONMENT=development  # development, testing, production
SECRET_KEY=insecure-secret-key-change-me

# API Configuration
NVIDIA_API_KEY=your_nvidia_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Database
DATABASE_URL=sqlite:///./sql_app.db
DATABASE_ECHO=False

# Cache
CACHE_BACKEND=redis  # or 'memory' for development
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300  # 5 minutes

# Authentication
AUTH_ENABLED=False
JWT_SECRET_KEY=insecure-jwt-secret-change-me
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=True

# CORS
CORS_ORIGINS=*
CORS_METHODS=*
CORS_HEADERS=*
CORS_CREDENTIALS=True

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=8001
ENABLE_TRACING=True
TRACING_SERVICE_NAME=agi-prompt-api

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,fr,es,de,zh

# File Storage
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=txt,pdf,docx
